<style>
    .newsletter {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 5% 0%;
    }

    p {
        text-align: center;
        font-size: 1rem;
        font-style: normal;
        font-weight: 300;
        text-transform: capitalize;
        width: 45ch;
        line-height: 2;
    }


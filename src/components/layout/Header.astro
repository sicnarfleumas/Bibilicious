---
import HeaderComponent from './header/header';

interface Props {
	currentLanguage?: string;
}

const { currentLanguage = 'en' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<HeaderComponent client:load currentLanguage={currentLanguage} pathname={currentPath} />

<style is:global>
/* Critical styles for header functionality */
html, body {
  overflow-x: hidden;
  width: 100%;
  margin: 0;
  padding: 0;
}

/* Style for when mobile menu is open */
body.menu-open {
  overflow: hidden;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

@media (max-width: 768px) {
  html, body {
    position: relative;
  }
}
</style>

---
import { Image } from "astro:assets";

import Bmac from "./button/bmac.astro";

---

<header>
	
	<nav>
		
		<a href="/" class="logo">
			Bibilicious
		</a>

			<ul>
				
				<li>
					<a href="/blog" class="current-page">Blog</a>
				</li>

				<li>
					<a href="/contact" class="current-page">Contact</a>
				</li>

			</ul>

				<Bmac />
	</nav>
	
</header>



<style>

	header {
		padding: 2.5% 20%;
		backdrop-filter: blur(2px);
		position: sticky;
		top: 0;
	}

	
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 0;
	}

	nav ul {
		

		display: flex;
		list-style: none;
		gap: 3rem;
		padding: 0.6rem .5rem;
		justify-content: center;
		align-items: center;
		gap: .5rem;

		border-radius: 3.125rem;
		border: 1px solid #000;
	}


	nav li {
		display: inline-block;``
		margin-right: 20px;
	}

	nav ul li a {
		font-size: .9rem;
		transition: .85s ease;
		padding: .25rem .5rem;
		


	}

	nav ul li a:hover, 
	nav ul li a:active,
	nav ul li a:focus,
	nav ul li a.current {
		text-decoration: none;
		background-color: #abffb0;
		border-radius: 2rem;
		padding: .25rem .5rem;
	}

	/* responsive styles */

	@media screen and (max-width: 1024px) {
		header {
			padding: 2% 10%;
		}

		

	}
	
	@media screen and (max-width: 768px) {
		header {
			padding: 0% 5%;
		}
		
		nav {
			flex-direction: column;
			gap: 1rem;
		}

		
	}
	

	
</style>

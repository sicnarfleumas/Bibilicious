---
// Import everything necessary
import { getCollection } from 'astro:content';
import FormattedDate from './FormattedDate.astro';

// Get all blog posts
const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

---

<section class="ReadMore">
    <h2>RECENT POSTS</h2>
    <!-- Return the 4 most recent posts from the Astro Collection blog -->
    <div class="wrapper">

        {
            posts.slice(0, 4).map((post) => (
                
                    <a href={`/blog/${post.slug}/`}>
                        <h4 class="title">{post.data.title}</h4>
                        <p class="description">{post.data.description}</p>
                        <div class="bottom">
                            <p class="date"><FormattedDate date={post.data.pubDate} /></p>
                            <p class="category">{post.data.category}</p>
                        </div>
                    </a>
                

            ))
        }
    </div>

</section>


<style>
    .ReadMore {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Open Sans', 'Helvetica Neue', sans-serif;
        display: flex;
        flex-direction: column;
        padding: 2.5% 20%;
        gap: 2rem;
        }

    h2 {
        font-size: 2rem;
        font-weight: 900;
    }

    .wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    .bottom {
        display: flex;
        flex-direction: row-reverse;
        justify-content: space-between;
    }

    .category {
        font-weight: 700;
    }

    .date {
        font-weight: 300;
    }


    a {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        text-align: justify;
    }
    a:hover {
        text-decoration: none;
    }


    /* Tablet */
    @media screen and (max-width: 1024px) {

        .ReadMore {
            padding: 2.5% 10%;
        }

    }
</style>
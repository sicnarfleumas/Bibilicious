---
import BlogHead from '../../../components/blog/BlogHead.astro';
import Header from '../../../components/layout/Header.astro';
import Footer from '../../../components/layout/Footer.astro';
import Coffee from '../../../components/ui/Coffee.astro';
import FormattedDate from '../../../components/blog/FormattedDate.astro';
import SchemaOrg from '../../../components/common/SchemaOrg.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';
import { getCollection } from 'astro:content';

import { ViewTransitions } from 'astro:transitions';

// Get posts for Tamil
const allPosts = await getCollection('blog');
const posts = allPosts
  .filter(post => post.data.language === 'ta')
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Translations for UI elements
const translations = {
  title: "Bibilicious Blog | роЖроЩрпНроХро┐ро▓роорпН тЗД родрооро┐ро┤рпН роорпКро┤ро┐рокрпЖропро░рпНрокрпНрокрпБ",
  description: "роЬрокрпНрокро╛ройро┐роп роорпКро┤ро┐ роХро▒рпНро▒ро▓рпН, роорпКро┤ро┐рокрпЖропро░рпНрокрпНрокрпБ роЙродро╡ро┐роХрпНроХрпБро▒ро┐рокрпНрокрпБроХро│рпН рооро▒рпНро▒рпБроорпН родройро┐рокрпНрокроЯрпНроЯ роЕройрпБрокро╡роЩрпНроХро│рпИрокрпН рокро▒рпНро▒ро┐роп роХроЯрпНроЯрпБро░рпИроХро│рпИрокрпН рокроЯро┐ропрпБроЩрпНроХро│рпН.",
  latestPosts: 'ЁЯМ╕ роЪроорпАрокродрпНродро┐роп роХроЯрпНроЯрпБро░рпИроХро│рпН:',
  readMore: 'роорпЗро▓рпБроорпН рокроЯро┐роХрпНроХ',
};

// Generate breadcrumbs for the blog index
const breadcrumbs = [
  {
    "@type": "ListItem",
    "position": 1,
    "name": "роорпБроХрокрпНрокрпБ",
    "item": "https://bibilicious.com/ta"
  },
  {
    "@type": "ListItem",
    "position": 2,
    "name": "ро╡ро▓рпИрокрпНрокродро┐ро╡рпБ",
    "item": "https://bibilicious.com/ta/blog"

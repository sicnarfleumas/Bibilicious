---
import BaseHead from '../../components/common/BaseHead.astro';
import Header from '../../components/layout/Header.astro';
import Form from '../../components/form/ContactForm.astro';
import Coffee from '../../components/ui/Coffee.jsx';
import Footer from '../../components/layout/Footer.astro';
import SchemaOrg from '../../components/common/SchemaOrg.astro';
import JapaneseTheme from '../../components/theme/JapaneseTheme.astro';
import { dissolve, sakuraFade, paperSlide } from '../../components/theme/JapaneseTransitions';

import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { ClientRouter } from 'astro:transitions';

const currentLanguage = 'ta';

// Tamil translations for contact page
const translations = {
  title: 'தொடர்பு',
  description: 'ஜப்பானிய, தமிழ் மற்றும் ஆங்கில மொழிபெயர்ப்பு சேவைகளுக்கு தொடர்பு கொள்ளவும்'
};

// Generate breadcrumbs for the contact page
const breadcrumbs = [
  {
    name: 'முகப்பு',
    item: '/ta/'
  },
  {
    name: 'தொடர்பு',
    item: '/ta/contact'
  }
];
---

<!doctype html>
<html lang={currentLanguage} class="jp-theme jp-texture" transition:animate={dissolve({ duration: '0.7s' })}>
	<head>
		<!-- Google Tag Manager -->
		<script type="text/partytown">
			(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
			new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
			j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
			'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
			})(window,document,'script','dataLayer','GTM-MMXWL72L');
		</script>
		<!-- End Google Tag Manager -->
		<BaseHead 
			title={`${translations.title} | ${SITE_TITLE}`} 
			description={translations.description}
			language={currentLanguage} 
		/>
		<ClientRouter />
		<JapaneseTheme />
		<!-- Schema.org structured data -->
		<SchemaOrg 
			type="website"
			title={`${translations.title} | ${SITE_TITLE}`}
			description={translations.description}
			language={currentLanguage}
			breadcrumbs={breadcrumbs}
		/>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MMXWL72L" height="0" width="0" style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		<main>
            <Header currentLanguage={currentLanguage} transition:persist />
            <Form language={currentLanguage} transition:animate={paperSlide({ duration: '0.6s' })} />
            <Coffee language={currentLanguage} client:visible transition:animate={sakuraFade({ duration: '0.5s' })} />
            <Footer language={currentLanguage} transition:animate={dissolve({ duration: '0.4s' })} />
		</main>
	</body>
</html>

<style>
	main {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}
</style> 